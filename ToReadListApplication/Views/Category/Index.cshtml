@model List<Category>;

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-6 w-50">All Categories</h1>
        <a class="btn btn-outline-primary btn-lg btn-block w-50" asp-action="Create">
            Add a Category
        </a>
    </div>

    <div class="d-flex justify-content-center align-items-center">
        @if (Model.Count == 0)
        {
            <div class="alert alert-info text-center w-50">No Categories Available</div>
        }
        else
        {
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Category Name</th>
                        <th class="text-center" colspan="3">Operations</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td class="text-center">
                                <a class="btn btn-secondary me-2" asp-action="Update" asp-route-id="@item.Id">
                                    <i class="bi bi-pencil-square"></i> Update
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id"
                                   class="btn btn-outline-danger"
                                   onclick="return confirm('Are you sure you want to delete this category?');">
                                    Delete
                                </a>
                            </td>
                        </tr>
                    }
  
                </tbody>
            </table>
        }
    </div>
</div>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<div class="d-flex justify-content-around align-items-center m-4 ">
    <h1>All Categories</h1>
    <a class="btn btn-primary me-3" asp-action="Create">Add Category</a>
</div>

<div class="d-flex justify-content-center align-items-center">
    @if (Model.Count == 0)
    {
        <div class="alert alert-info">No Categories Available</div>
    }
    else
    {
        <table class="table table-bordered table-hover table-active">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Category Name</th>
                    <th class="text-center" colspan="3">Operations</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td><a class="btn btn-secondary" asp-action="Update" asp-route-id="@item.Id">Update</a></td>
                        <td><a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
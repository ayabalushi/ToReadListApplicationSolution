
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model Book

<div class="container mt-5">
    <h2>Book Details</h2>
    <div class="card mb-3">
        <div class="row no-gutters">
            <div class="col-md-4">
                <img src="~/@Model.ImageUrl" alt="@Model.Name" style="width: 100%; height: 100%;" />
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">@Model.Name</h5>
                    <p class="card-text"><strong>Author:</strong> @Model.Author</p>
                    <p class="card-text"><strong>Description:</strong> @Model.Description</p>
                    <p class="card-text"><strong>Category:</strong> @Model.Category.Name</p>
                    <p class="card-text"><strong>Rate:</strong>
                        @for (int i = 0; i < 5; i++)
                        {
                            <span class="fa fa-star @(i < Model.Rate ? "text-warning" : "text-muted")"></span>
                        }
                    </p>
                    <p class="card-text"><small class="text-muted"><strong>Publish Date:</strong> @Model.PublishDate.ToShortDateString()</small></p>
                    <a href="@Url.Action("Index", "Book")" class="btn btn-secondary">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>
